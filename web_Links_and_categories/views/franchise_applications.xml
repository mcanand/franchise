<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_franchise_application_form" model="ir.ui.view">
        <field name="name">Franchisee Applications</field>
        <field name="model">franchise.application.partner</field>
        <field name="arch" type="xml">
            <form string="Franchise Application" create="false">
                <header>
<!--                    add buttom to change state to inprogress visibility-->
                    <field name="status" widget="statusbar" statusbar_visible="draft,progress,done"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="application_sequence"/>
                            <field name="name"/>
                            <field name="district_id"/>
                            <field name="panchayat_id"/>
                            <field name="location"/>
                        </group>
                        <group>
                            <field name="mobile"/>
                            <field name="email"/>
                            <field name="known_by"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_franchise_application_kanban" model="ir.ui.view">
        <field name="name">franchise applications</field>
        <field name="model">franchise.application.partner</field>
        <field name="arch" type="xml">
            <kanban class="o_res_partner_kanban" sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="status"/>
                <field name="email"/>
                <field name="mobile"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">

                        <div t-attf-class="oe_kanban_global_click oe_kanban_color_#{kanban_getcolor(record.color.raw_value)}">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                            </div>
                                                    <style style="display:none"> .o_kanban_view .o_kanban_record::after { content: ""; position: absolute; top: -2px; left: 90%; bottom: 0; right: auto; width: 20px; height: 32px; } </style>

                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="email"/>
                                </strong>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="mobile"/>
                                </strong>
                            </div>
                        </div>

                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="view_franchise_application_list" model="ir.ui.view">
        <field name="name">franchise Applications</field>
        <field name="model">franchise.application.partner</field>
        <field name="arch" type="xml">
            <tree string="Applications" create="false">
                <field name="name"/>
                <field name="mobile"/>
                <field name="email"/>
                <field name="location"/>
            </tree>
        </field>
    </record>
    <record id="action_view_franchise_application" model="ir.actions.act_window">
        <field name="name">Franchise Applications</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">franchise.application.partner</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

</odoo>