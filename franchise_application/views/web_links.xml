<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_web_link_form" model="ir.ui.view">
        <field name="name">franchisee web links</field>
        <field name="model">web.links</field>
        <field name="arch" type="xml">
            <form string="web Links">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="url" placeholder="https://..."/>
                            <field name="link_category_id"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="image" widget="image" class="oe_avatar" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_web_link_kanban" model="ir.ui.view">
        <field name="name">franchisee web links</field>
        <field name="model">web.links</field>
        <field name="arch" type="xml">
            <kanban class="o_res_partner_kanban" sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="url"/>
                <field name="image"/>
                <templates>
                    <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img alt="Avatar" t-att-src="kanban_image('web.links', 'image',record.id.raw_value)"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                    </strong>
                                </div>
                            </div>
                        </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="view_web_link_list" model="ir.ui.view">
        <field name="name">franchisee web links</field>
        <field name="model">web.links</field>
        <field name="arch" type="xml">
            <tree string="web Links" editable="top">
                <field name="name"/>
                <field name="url"/>
            </tree>
        </field>
    </record>
    <record id="action_view_web_links" model="ir.actions.act_window">
        <field name="name">web links</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">web.links</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

</odoo>