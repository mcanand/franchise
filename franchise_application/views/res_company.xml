<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_company_inherit" model="ir.ui.view">
        <field name="name">res.company</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Franchise Amount">
                    <group>
                        <group>
                            <field name="month_renew_amount"/>
                            <field name="year_renew_amount"/>
                        </group>
                    </group>
                </page>
            </xpath>
            <field name="favicon" position="after">
                <field name="franchise_bg_image" widget="image" class="float-left oe_avatar"/>
            </field>
        </field>
    </record>
</odoo>