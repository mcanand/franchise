<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_panchayath_events_kanban" model="ir.ui.view">
        <field name="name">panchayath.events.kanban</field>
        <field name="model">panchayath.events</field>
        <field name="priority" eval="100"/>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="district_id"/>
                <field name="panchayat_id"/>
                <field name="panchayath_assis"/>
                <field name="id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_content oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img alt="Avatar"
                                     t-att-src="kanban_image('panchayath.events', 'image',record.id.raw_value)"/>
                            </div>
                            <div>
                                <div>
                                    <strong class="o_kanban_record_title">
                                        <span>
                                            <field name="name"/>
                                        </span>
                                    </strong>
                                </div>
                                <div>
                                    <span class="o_kanban_record_district">
                                        <field name="district_id"/>
                                    </span>
                                </div>
                                <div>
                                    <span class="o_kanban_record_panchayath">
                                        <field name="district_id"/>
                                    </span>
                                </div>
                                <div>
                                    <span class="o_kanban_record_panchayath_assis">
                                        <field name="panchayath_assis"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_country_panchayath_event_tree" model="ir.ui.view">
        <field name="name">panchayath.events.tree</field>
        <field name="model">panchayath.events</field>
        <field name="arch" type="xml">
            <tree string="Events" editable="bottom">
                <field name="name"/>
                <field name="district_id"/>
                <field name="panchayat_id"/>
                <field name="panchayath_assis"/>
                <field name="image" class="oe_avatar" widget="image"/>
                <field name="schedule_date"/>
                <field name="category"/>
                <field name="priority"/>
                <field name="heading"/>
                <field name="subheading"/>
                <field name="message"/>
            </tree>
        </field>
    </record>
    <record id="view_country_panchayath_event_form" model="ir.ui.view">
        <field name="name">panchayath.events.form</field>
        <field name="model">panchayath.events</field>
        <field name="arch" type="xml">
            <form string="district">
                <header>

                    <field name="state" widget="statusbar" statusbar_visible="not_published,published"/>
                    <button name="post" string="Post" type="object" class="oe_highlight"/>
                    <button name="cancel" string="Cancel" type="object"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="district_id"/>
                            <field name="panchayat_id"/>
                            <field name="panchayath_assis"/>
                            <field name="schedule_date"/>
                            <field name="category"/>
                            <field name="priority" />
                            <field name="heading" />
                            <field name="subheading"/>
                            <field name="message"/>

                        </group>
                        <group>
                            <field name="image" widget="image"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="panchayath_event_list" model="ir.actions.act_window">
        <field name="name">events</field>
        <field name="res_model">panchayath.events</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create events
            </p>
        </field>
    </record>
    <menuitem id="panchayath_event_list_menu" name="Panchayath Events"
              action="panchayath_event_list"
              sequence="9"/>
</odoo>

