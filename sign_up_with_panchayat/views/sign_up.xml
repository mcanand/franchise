<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="sign_up_with_panchayat" inherit_id="auth_signup.fields">
        <xpath expr="//div[hasclass('field-confirm_password')]" position="replace"/>
        <xpath expr="//div[hasclass('field-name')]" position="replace"/>
        <xpath expr="//div[hasclass('field-password')]" position="replace"/>
        <xpath expr="//div[hasclass('field-login')]" position="replace">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3 field-login">
                        <input type="text" name="login" t-att-value="login" id="login"
                               class="form-control form-control-sm"
                               autofocus="autofocus" placeholder="Your Email"
                               autocapitalize="off" required="required"
                               t-att-readonly="'readonly' if only_passwords else None"/>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3 field-name">
                        <input type="text" name="name" t-att-value="name" id="name" class="form-control form-control-sm"
                               placeholder="Your Name"
                               required="required" t-att-readonly="'readonly' if only_passwords else None"
                               t-att-autofocus="'autofocus' if login and not only_passwords else None"/>
                    </div>
                </div>
                <div class="col-md-6">
                    <t t-set="districts" t-value="request.env['website'].get_districts()"/>
                    <div class="mb-3 field-district">
                        <select class="form-select select_district w-100" aria-label="select" name="district_id">
                            <t t-foreach="districts" t-as="district">
                                <option t-att-value="district.id">
                                    <t t-esc="district.name" />
                                </option>
                            </t>
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3 field-panchayat">
                        <select class='form-select w-100' aria-label='select' name='panchayat_id'/>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3 field-password">
                        <input type="password" name="password" id="password" class="form-control form-control-sm"
                               required="required" placeholder="Password"
                               t-att-autofocus="'autofocus' if only_passwords else None"/>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3 field-confirm_password">
                        <input type="password" name="confirm_password" id="confirm_password"
                               placeholder="Confirm Password"
                               class="form-control form-control-sm" required="required"/>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>