<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="franchise_registration" name="Registrasion">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty">
                <div class="container-fluid cf-s-contailner">
                    <section class="s_website_form" data-vcss="001" data-snippet="s_website_form">
                        <div class="container fran-application-form">
                            <form action="/registration/franchise" method="post" enctype="multipart/form-data"
                                  class="o_mark_required s_website_form_input" id="form_input_id" data-mark="*" data-model_name=""
                                  data-success-page="">
                                <br/>
                                <h3>e-Mithram Registration</h3>
                                <br/>
                                <br/>
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <div class="row s_row_frst">
                                    <div class="col-md-6">
                                        <div class="mb-3 field-name">
                                            <input type="text" name="name" class="form-control form-control-sm"
                                                   placeholder="Name"
                                                   required="required"
                                                   t-att-readonly="'readonly' if only_passwords else None"
                                                   t-att-autofocus="'autofocus' if login and not only_passwords else None"/>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3 field-dob">
                                            <input type="date" name="dob" id="dob"
                                                   class="form-control form-control-sm"
                                                   autofocus="autofocus" placeholder="Date of Birth"
                                                   autocapitalize="off" required="required"/>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3 field-email">
                                            <input type="email" name="email" id="email"
                                                   class="form-control form-control-sm"
                                                   autofocus="autofocus" placeholder="Email"
                                                   autocapitalize="off" required="required"/>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="mb-3 field-phone">
                                            <input type="text" name="phone" id="phone"
                                                   class="form-control form-control-sm"
                                                   autofocus="autofocus" placeholder="Phone Number"
                                                   autocapitalize="off" required="required"
                                                   maxlength="10"/>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="mb-3 local_Body">
                                            <select class="form-control" name="local_body">
                                                <option t-att-value="panchayath">panchayath</option>
                                                <option t-att-value="municipality">municipality</option>
                                                <option t-att-value="corporation">corporation</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <select name="district" t-attf-class="form-control"
                                                required="1">
                                            <t t-foreach="districts or []" t-as="district">
                                                <option t-att-value="district.id">
                                                    <t t-esc="district.name"/>
                                                </option>
                                            </t>
                                        </select>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="mb-3 field-panchayath">
                                            <select class='form-select form-control-md form-control' aria-label='select' name='panchayat'/>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3 field-location">
                                            <input type="text" name="location" id="location"
                                                   class="form-control form-control-sm"
                                                   autofocus="autofocus" placeholder="Preferred Location:"
                                                   autocapitalize="off" required="required"/>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3 field-about">
                                            <input type="text" name="known_by" id="known_by"
                                                   class="form-control form-control-sm"
                                                   autofocus="autofocus" placeholder="How did you hear about us:"
                                                   autocapitalize="off" required="required"/>
                                        </div>
                                    </div>

                                    <div id="myModal" class="popup-modal">
                                        <!-- Modal content -->
                                        <div class="modal-content">
                                            <span class="close"><i class="fa fa-times"></i></span>
                                            <p><h6 id="msg-cls">Email/Phone is Alredy Exist</h6></p>
                                        </div>
                                    </div>

                                    <div class="form-group col-12 text-center" data-name="Submit Button">
                                        <div class="s_website_form_label"/>
                                        <button type="button" class="btn btn-primary btn-form-submit">Submit</button>
                                    </div>

                                    <p class="alert alert-danger" t-if="error" role="alert">
                                        <t t-esc="error"/>
                                    </p>

                                </div>
                            </form>
                        </div>
                    </section>
                </div>
            </div>
        </t>
    </template>
</odoo>
